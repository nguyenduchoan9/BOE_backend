<div class="row">
  <div class="left" style="margin-left: 1%; font-size: 18px;">
    <%= render_breadcrumbs :separator => ' > ' %>
  </div>
</div>
<div class="container">
  <div class="card">
    <%= form_for @material, url: {controller: 'materials', action: 'update'} do |f| %>
        <%= f.hidden_field :id %>
        <div class="card-content">
          <span class="card-title center">Update Material</span>
          <div class="input-field">
            <%= f.label :name, 'Material Name *' %>
            <%= f.text_field :name, required: 'true', placeholder: 'Material Name' %>
          </div>
          <%= link_to 'Back', materials_path, class: "btn", data: {turbolinks: false} %>
          <%= f.submit value: 'update', class: 'btn' %>
        </div>
    <% end %>
  </div>
</div>