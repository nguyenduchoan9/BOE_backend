<div class="row">
  <div class="left" style="margin-left: 1%; font-size: 18px;">
    <%= render_breadcrumbs :separator => ' > ' %>
  </div>
</div>
<div class="container">
  <div class="card">
    <%= form_for @category do |f| %>
        <div class="card-content">
          <span class="card-title">New Category</span>
          <div class="input-field" style="margin-top: 5%;">
            <%= f.label :category_name, "Category Name" %>
            <%= f.text_field :category_name, style: 'width: 50%;', placeholder: 'Category Name' %>
          </div>
          <%= link_to 'Back', categories_path, class: "btn" %>
          <%= f.submit value: 'Add', class: 'btn' %>
        </div>
    <% end %>
  </div>
</div>