<style>
  a li {
    width: 20px;
  }
</style>
<div class="container">
  <div class="fixed-action-btn">
    <%= link_to new_users_path, class: 'btn-floating red' do %>
        <i class="large material-icons">add</i>
    <% end %>
  </div>

  <table class="highlight responsive-table" id="users">
    <thead>
    <th>USERNAME</th>
    <th>FULLNAME</th>
    <th>EMAIL</th>
    <th>ROLE</th>
    <th></th>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role.name %></td>
          <td>
            <a href="users/edit?id=<%= user.id %>">
              <i class="material-icons">mode_edit</i>
            </a>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
<script>
    $( document ).on('turbolinks:load', function() {
        $('#users').dataTable();
        $('select').material_select();
    })
</script>