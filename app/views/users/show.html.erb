<style>
  a li {
    width: 20px;
  }
</style>
<div>
  <div class="row">
    <div class="fixed-action-btn">
      <%= link_to new_users_path, class:'btn-floating red' do %>
            <i class="large material-icons">add</i>
      <% end %>
    </div>
    <%= form_tag(users_path, method: :get) do %>
        <div class="col s3">
          <div class="input-field">
            <%= button_tag(style: 'background-color: white; border: none;', class: 'prefix') do %>
                <i class="material-icons" style="margin-top: 10px">search</i>
            <% end %>
            <%= text_field_tag :term, params[:term], id: "search" %>
            <label for="search">Full Name</label>
          </div>
        </div>
    <% end %>
  </div>
  <table class="highlight responsive-table">
    <thead>
    <th>USERNAME</th>
    <th>FULLNAME</th>
    <th>EMAIL</th>
    <th>ROLE</th>
    <th></th>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role.name %></td>
          <td>
            <a href="users/edit?id=<%= user.id %>">
              <i class="material-icons">mode_edit</i>
            </a>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div style="text-align: center">
    <%= will_paginate @users %>
  </div>

</div>