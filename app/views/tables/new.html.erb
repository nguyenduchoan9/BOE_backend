<div class="row">
  <div class="left" style="margin-left: 1%; font-size: 18px;">
    <%= render_breadcrumbs :separator => ' > ' %>
  </div>
</div>
<div class="container">
  <div class="card">
    <%= form_for @table do |f| %>
        <div class="card-content">
          <span class="card-title center">New Table</span>
          <div class="input-field">
            <%= f.label :table_number, 'Table Number *' %>
            <%= f.text_field :table_number, id: 'number', required: 'true', placeholder: 'Table Number' %>
          </div>
          <%= link_to 'Back', tables_path, class: "btn" %>
          <%= f.submit value: 'Add', class: 'btn' %>
        </div>
    <% end %>
  </div>
</div>