<div class="row">
  <div class="left" style="margin-left: 1%; font-size: 18px;">
    <%= render_breadcrumbs :separator => ' > ' %>
  </div>
</div>
<div class="container">
  <div class="card">
    <%= form_for @table, url: {controller: 'tables', action: 'update'} do |f| %>
        <%= f.hidden_field :id, value: @table.id %>
        <div class="card-content">
          <span class="card-title">Update Table</span>
          <div class="center-align">
            <img src="/tables/edit.png?id=<%= @table.id %>" height="300px" width="300px">
            <br>
            <a href="/tables/edit.json?id=<%= @table.id %>" target="_blank" class="waves-effect waves-light btn">
              <i class="material-icons left">get_app</i>Download
            </a>
          </div>
          <%= f.label :table_number, 'Table Number' %>
          <%= f.text_field :table_number, id: 'number' %>
          <%= link_to 'Back', tables_path, class: "btn" %>
          <%= f.submit value: 'Add', class: 'btn' %>
        </div>
    <% end %>
  </div>
</div>