<style>
  a li {
    width: 20px;
  }
</style>
<div>
  <div class="row">
    <div class="col s1" style="padding-top: 2%">
      <%= link_to controller: 'memberships', action: 'new' do %>
          <button class="btn">
            ADD
          </button>
      <% end %>
    </div>
    <%= form_tag(memberships_path, method: :get) do %>
        <div class="col s1" style="padding-top: 2%; margin-right: 3%">
          <%= submit_tag 'Search', class: "btn" %>
        </div>
        <div class="col s3">
          <div class="input-field">
            <%= text_field_tag :term, params[:term], id: "search" %>
            <label for="search">Level</label>
          </div>
        </div>
    <% end %>
  </div>
  <table class="highlight responsive-table">
    <thead>
    <th>MARK BOUNDARY</th>
    <th>LEVEl</th>
    <th>DISCOUNT RATE</th>
    <th></th>
    </thead>
    <tbody>
    <% @memberships.each do |membership| %>
        <tr>
          <td><%= membership.mark_boundary %></td>
          <td><%= membership.level %></td>
          <td><%= membership.discount_rate %></td>
          <td>
            <a class="btn-floating red" href="memberships/edit?id=<%= membership.id %>">
              <i class="large material-icons">mode_edit</i>
            </a>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div style="text-align: center">
    <%= will_paginate @discount_days %>
  </div>
</div>