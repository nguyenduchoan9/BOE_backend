<div class="row">
  <div class="left" style="margin-left: 1%; font-size: 18px;">
    <%= render_breadcrumbs :separator => ' > ' %>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="card-content">
      <span class="card-title">Rejected Order</span>
      <table>
        <thead>
        <th>ID</th>
        <th>Order</th>
        <th>Total</th>
        <th></th>
        </thead>
        <tbody id="tbody">
          
        </tbody>
      </table>
    </div>
  </div>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Restaurant Schedule</span>
      <div class="row">
        <div class="input-field col s6">
          <input type="text" id="open_time">
          <label for="open_time">Open Time</label>
        </div>
        <div class="input-field col s6">
          <input type="text" id="close_time">
          <label for="close_time">Close Time</label>
        </div>
      </div>
    </div>
    <div class="card-action">
      <button class="btn">Set</button>
    </div>
  </div>
</div>
<script>
  $(document).ready(function () {
      data = firebase.database().ref().child('Phongdemo');
      data.on('child_added', function (snapshot) {
        $('#tbody').append('<tr><td>'+snapshot.child('name').val()+'</td><td>'+snapshot.child('text').val()+
            '</td><td>'+snapshot.child('type').val()+'</td><td><input type="button" class="btn" value="refund"></td></tr>')
      });
  });
</script>