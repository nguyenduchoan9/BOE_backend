<style>
  a li {
    width: 20px;
  }
</style>
<div>
  <div class="row">
    <div class="fixed-action-btn">
      <%= link_to new_discount_days_path, class:'btn-floating red' do %>
          <i class="large material-icons">add</i>
      <% end %>
    </div>
    <%= form_tag(discount_days_path, method: :get) do %>
        <div class="col s3">
          <div class="input-field">
            <%= button_tag(style: 'background-color: white; border: none;', class: 'prefix') do %>
                <i class="material-icons" style="margin-top: 10px">search</i>
            <% end %>
            <%= date_field_tag :term, params[:term], id: "search", class: "datepicker" %>
            <label for="search">Date</label>
          </div>
        </div>
    <% end %>
  </div>
  <table class="highlight responsive-table">
    <thead>
    <th>FROM DAY</th>
    <th>TO DAY</th>
    <th>DISCOUNT ITEM</th>
    <th>DISCOUNT RATE</th>
    <th></th>
    </thead>
    <tbody>
    <% @discount_days.each do |discount_day| %>
        <tr>
          <td><%= discount_day.from_day %></td>
          <td><%= discount_day.to_day %></td>
          <td><%= discount_day.discount_item %></td>
          <td><%= discount_day.discount_rate %></td>
          <td>
            <a href="discount_days/edit?id=<%= discount_day.id %>">
              <i class="material-icons">mode_edit</i>
            </a>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div style="text-align: center">
    <%= will_paginate @discount_days %>
  </div>

</div>
<script>
    $('.datepicker').pickadate({
        selectMonths: true, // Creates a dropdown to control month
        selectYears: 50, // Creates a dropdown of 15 years to control year
    });
</script>